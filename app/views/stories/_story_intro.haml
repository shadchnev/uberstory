- authors = (story.users - [story.user]).take(3) 
.story-intro{"data-url" => story_url(story)}
  - if can_add_new_line(current_user, story)
    .write-now{:class => "write-now-style-3"}
      %a{:href => story_url(story)}
        .feather
          = image_tag 'feather-small-black.png', :alt => ""
        Write now!
  .cover
    .peel
    .author-picture= image_tag story.user.image
    .started-by Story started by
    .author-name= story.user.name
    - unless authors.empty?
      .then-by then co-written by
      .other-authors-images
        - authors.each do |u|
          = image_tag u.image
      .other-authors
        #{authors.first.name}
        - if story.users.size > 2
          and #{pluralize story.users.size - 2, 'other'}
        