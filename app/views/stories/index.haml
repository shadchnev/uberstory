.hero-unit
  %h1 Uberstory
  %p= "Hey there #{current_user.first_name}, feeling creative?"
  %p
    = form_for Story.new do |f|
      = f.fields_for :lines, Line.new do |l|
        = l.text_field :text
  = render :partial => 'new_story_modal'
  %p= link_to "Start a new story", '#new-story-dialogue', :class => "btn primary large", "data-toggle" => "modal"
  
- (@stories.size / 3 + 1).times do |row_number|
  .row
    - 3.times do |column_number|
      .span4
        - story = @stories[row_number * 3 + column_number]
        - if story
          = render :partial => "story", :locals => {:story => story}
        
